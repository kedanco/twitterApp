<!DOCTYPE html>
<html>
  <head>
    <title>TwitterApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  </head>
  <% if user_signed_in? %>
  <div class="nav navbar navbar-inverse">
     <div class="container">
       <div class="navbar-brand">
         <%= link_to root_path, class: "homeIcon" do %> <i class="fa fa-2x fa-home" aria-hidden="true"></i> <% end %>
         <%= link_to current_user.name, user_path(id:current_user.id)%>
        </div>

           
           <ul class="nav navbar-nav navbar-right">

             <li><%= link_to new_tweet_path do %><button class="buttons tweetBtn"> Tweet </button><% end %></li>
             <li><%= link_to destroy_user_session_path, method: :delete do %><button class="buttons signoutBtn">Sign Out</button><% end %></li>
           </ul>

               <!-- Removed buttons, can keep login & signup buttons as default -->

     </div>
   </div>
    <% end %>
  <body class="<%= controller_name %> <%= action_name %>">

    <div class="container-fluid"></div>
      <div id="header" class="row">
        <%= render 'layouts/messages' %>

      </div>

    <%= yield %>


  </body>
</html>
