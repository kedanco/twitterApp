
<h2> This post has <%= pluralize(@comments.count, "replies") %></h2>
  <p><b>Commented by: <%= comment.user.email %></b></p>
  <p><%= comment.content %></p>

  <% if current_user == comment.user %>
    <%= link_to "Delete comment", [comment.tweet, comment], method: :delete %>
    <%= link_to "Edit comment", edit_tweet_comment_path(comment.tweet, comment) %>
  <% end %>
