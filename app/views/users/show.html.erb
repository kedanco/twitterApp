<div class="row">
  <div class="col-md-4 col-md-offset-4">

<div class="pageHeader">

    <h1><%= @user.name %></h1>
    <% if !@avatar.blank? %>
       <%=  image_tag @avatar.thumb, class: "img-circle"%>
    <% else %>
        <h4> you have no Avatar yet! Click here to upload one!</h4>
    <% end %>

    <!-- Upload photo -->



    <%= form_for @user, url:user_path(id: @user.id), method: :put do |f| %>
      <div class="form-group">
          <%= f.label :image , class: "control-label col-sm-2" %>
          <div class="col-sm-8 col-sm-offset-2"> <%= f.file_field :avatar , class: "form-control "  %></div>
      </div>
    <%= f.submit "Upload" , class: "btn btn-success pull-right" %>

    <% end %>


    <%= link_to home_path do %><i class="fa fa-home fa-3x" aria-hidden="true"></i> <% end %>

    <%= link_to new_tweet_path do %><button class="buttons tweetBtn"> Tweet </button><% end %>

    

</div>

</div>

</div>

<div class="row">

<div class="pageBody col-md-4 col-md-offset-4">

    <div id="displayTweets">


      <% if !(@tweets.empty?) %>
        <% @tweets.each do |tweet| %>

          <%= render tweet %>

        <% end %>
      <% else %>
          <div class="tweet">
            <h4> No tweets yet! Create one now! </h4>
          </div>
      <% end %>

    </div>


</div>
</div>

  <!-- form css -->
  <script>
    var form = document.getElementsByTagName("form");
    form[0].className += " form-horizontal";
  </script>
