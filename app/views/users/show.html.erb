<div class="row">
  <div class="col-md-4 col-md-offset-4">

<div class="pageHeader">

    <h1><%= @user.name %></h1>
    <% if !@avatar.blank? %>
       <%=  image_tag @avatar.thumb, class: "img-circle"%>
    <% else %>
        <h4> you have no Avatar yet! Click here to upload one!</h4>
    <% end %>

    <!-- Upload photo -->



    <%= form_for @user, url:user_path(id: @user.id), method: :put do |f| %>
      <div class="form-group">
          <%= f.label :image , class: "control-label col-sm-2" %>
          <div class="col-sm-8 col-sm-offset-2"> <%= f.file_field :avatar , class: "form-control "  %></div>
      </div>
    <%= f.submit "Upload" , class: "btn btn-success pull-right" %>




    <%= link_to home_path do %><i class="fa fa-home fa-3x" aria-hidden="true"></i> <% end %>

    <%= link_to new_tweet_path do %><button class="buttons tweetBtn"> Tweet </button><% end %>

    <% end %>

</div>

</div>

</div>

<div class="row">

<div class="pageBody col-md-4 col-md-offset-4">

    <div id="displayTweets">


      <% if !(@tweets.empty?) %>
        <% @tweets.each do |tweet| %>

              <div class="tweet panel panel-info">


                <div class="panel-heading row">


                  <div class="panel-title">
                    <h3 class="col-sm-12">
                      <%= link_to tweet_path(id:tweet.id) do %> <span id="name"><%= @user.name %></span>   <% end %>
                      <span id="timeAgo">
                        <!-- If user updated tweet, displays updated_at time instead. -->
                          <%= (tweet.updated_at > tweet.created_at) ? time_ago_in_words(tweet.updated_at) : time_ago_in_words(tweet.created_at)  %>
                           ago

                      </span>
                      <span id="icons" class="pull-right">
                        <%= link_to edit_tweet_path(id: tweet.id) do %><i class="fa fa-pencil-square fa-2x" aria-hidden="true"></i> <% end %>
                          <%= link_to tweet_path(id: tweet.id), method: :delete do %><i class="fa fa-trash fa-2x" aria-hidden="true"></i> <% end %>
                      </span>
                    </h3>

                  </div>

                </div>


                <div class="panel-body">
                  <p> <%= tweet.text %> </p>
                
                </div>

              </div>

        <% end %>
      <% else %>
          <div class="tweet">
            <h4> No tweets yet! Create one now! </h4>
          </div>
      <% end %>

    </div>


</div>
</div>

  <!-- form css -->
  <script>
    var form = document.getElementsByTagName("form");
    form[0].className += " form-horizontal";
  </script>
